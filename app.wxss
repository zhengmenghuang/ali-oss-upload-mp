/**appwxss**/
/* 全局变量 */
page {
  /* 基础颜色类 */
  --color-primary: #12B8D7;
  --color-white: #FFFFFF;
  --color-red: #FF2828;
  --color-yellow: #FADB14;
  --color-green: #31CB33;

  /* 基础文字颜色 */
  --color-dark: #000000;
  --color-dark-85: rgba(0, 0, 0, 0.85);
  --color-dark-65: rgba(0, 0, 0, 0.65);
  --color-dark-45: rgba(0, 0, 0, 0.45);
  --color-dark-25: rgba(0, 0, 0, 0.25);
  --color-dark-06: rgba(0, 0, 0, 0.06);

  /* 基础背景色 */
  --color-grey: #f7fbff;

  /* 重置页面基本css 子类通过继承得到 */
  color: var(--color-dark);
  font-size: 14px;
  font-family: PingFangSC-Semibold, PingFang SC;
}

