/* 无内容的背景图 */
.no-data {
  margin-top: 20%;
  width: 150px;
  height: 144px;
  margin-left: calc(50% - 75px);
}

/* 加载完毕 */
.line-bottom {
  width: 100px;
  height: 32px;
}

/* 控制全局的选择框的大小 */
checkbox {
  transform: scale(0.76);
  padding-bottom: 3px;
}

/* 禁止选择 */
.opacity6 {
  opacity: 0.6;
  pointer-events: none;
}

/* 提交那妞 */
.submit {
  position: fixed;
  bottom: 32px;
  margin-left: 16px !important;
  margin-right: 16px !important;
  width: calc(100vw - 32px) !important;
  padding: 13px 0;
  font-weight: 400;
  color: var(--color-white) !important;
  background-color: var(--color-primary) !important;
}

button[disabled] {
  opacity: 0.4;
}